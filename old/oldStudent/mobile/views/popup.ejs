<!Doctype html>
<div class = 'backpop' id = 'backpop'>
	<div id = 'popup' class = 'popup'></div>
</div>
<script type="text/javascript">
	document.getElementById('backpop').addEventListener('click', popupCloseFunc);

	function popupCloseFunc(e)
	{
		if(e.target.classList.contains('backpop'))
		{
			closePopup();
		}
	}

	function closePopup()
	{
		document.getElementById('backpop').addEventListener('click', popupCloseFunc);
		document.getElementById('backpop').style.display = 'none';
	}
	function openPopup()
	{
		document.getElementById('backpop').style.display = 'block';
	}
	function showPopup(script, config)
	{
		document.getElementById('backpop').style.display = 'block';

		if(config.width)
			document.getElementById('popup').style.width = config.width;	

		if (config.height) 
			document.getElementById('popup').style.height = config.height;

		if (config.top) 
			document.getElementById('popup').style.marginTop = config.top;

		if (config.close) 
			document.getElementById('backpop').removeEventListener('click', popupCloseFunc);
		else 
			document.getElementById('backpop').addEventListener('click', popupCloseFunc);
				
		if(script) popup.innerHTML = script;
		else popup.innerHTML = `<p>Функция showPopup(script) первым параметом принимает скрипт, который окажется во всплывающем окне</p>`;
	}
</script>